<div class="home-header">
  <div class="home-header-website">
    <p><span class="black">twoSidedMarketPlace</span>.com</p>
  </div>
  <div class="home-header-title">
    <p>BUY AND SELL PRODUCTS ONLINE</p>
  </div>
</div>

<div class="home-navbar-container">
  <div class="home-navbar-login">
    <% if user_signed_in? %>
      <p>Logged in as:</p>
      <p>
        <%= link_to current_user.username, user_path(current_user) %>
        (<%= link_to 'Logout', destroy_user_session_path, method: :delete %>)
      </p>
    <% else %>
      <p>Login</p>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div class="home-navbar-shop">
      <p><%= link_to 'My Shop', products_path %></p>
    </div>
    <div class="home-navbar-cart">
      <p>My Cart</p>
    </div>
  <% end %>
  <div class="home-navbar-home">
    <p><%= link_to 'Home', root_path %></p>
  </div>
</div>

<div class="home-banner">
  <div class="home-banner-description">
    <p>Buy without limits. Sell without limits.</p>
  </div>
</div>

<div class="home-main">
  <div class="home-main-new-release">
    <p>Hot New Release</p>
  </div>
  <ul class="home-main-products-list">
    <% @products.each do |product| %>
      <% if product.visibility %>
        <li>
          <div class="product-image-container">
            <%= link_to image_tag(product.photo_url(:homepage)), product_path(product) %>
          </div>
          <div class="product-info-container">
            <p><%= product.name %></p>
            <p>$<%= sprintf('%.2f', product.unitprice) %></p>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<br>

<p>
  <%= link_to 'Manage Users', users_path if current_user.admin %>
</p>
