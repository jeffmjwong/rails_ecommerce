<h1>Welcome To Market Place!</h1>
<br>
<h2>All the products are here</h2>
<br><br>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th colspan="1"></th>
      <th>Seller</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <% if product.visibility %>
        <tr>
          <td><%= image_tag product.photo_url(:homepage) %></td>
          <td><%= product.name %></td>
          <td><%= link_to product.user.username, user_path(product.user) %></td>
          <td>
            <% if product.quantity > 0 %>
              <%= product.quantity %>
            <% else %>
              Out Of Stock
            <% end %>
          </td>
          <td><%= product.unitprice %></td>
          <td><%= link_to 'View Product', product %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to 'Manage Users', users_path if current_user.admin %>
</p>
<%= link_to 'Go To My User Home Page', user_path(current_user) %><br>
<%= link_to 'View My Cart' %><br>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
