<div class="home-header">
  <div class="home-header-website">
    <p><span class="black">twoSidedMarketPlace</span>.com</p>
  </div>
  <div class="home-header-title">
    <p>BUY AND SELL PRODUCTS ONLINE</p>
  </div>
</div>

<div class="home-banner">
  <div class="home-banner-description">
    <p>Buy without limits. Sell without limits.</p>
    <!-- <p class="tc">* Subject to terms and conditions.</p> -->
  </div>
</div>

<div class="home-main">
  <div class="home-main-new-release">
    <p>Hot New Release</p>
  </div>
  <ul class="home-main-products-list">
    <% @products.each do |product| %>
      <% if product.visibility %>
        <li>
          <div><%= link_to image_tag(product.photo_url(:homepage)), product_path(product) %></div>
          <p><%= product.name %></p>
          <p>$<%= sprintf('%.2f', product.unitprice) %></p>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<br>

<p>
  <%= link_to 'Manage Users', users_path if current_user.admin %>
</p>
<%= link_to 'Go To My User Home Page', user_path(current_user) %><br>
<%= link_to 'View My Cart' %><br>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
