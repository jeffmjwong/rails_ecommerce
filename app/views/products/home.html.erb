<div class="home-header">
  <div class="home-header-website">
    <p><span class="black">riverSite</span>.com</p>
  </div>
  <div class="home-header-title">
    <p>BUY AND SELL PRODUCTS ONLINE</p>
  </div>
  <% if !user_signed_in? %>
    <div class="home-header-action-container">
      <a href="/users/sign_up" class="home-header-signup">
        <p>Sign up</p>
      </a>
      <a href="/users/sign_in" class="home-header-login">
        <p>Log in</p>
      </a>
    </div>
  <% end %>
</div>

<%= render '/layouts/navbar' %>

<div class="home-banner">
  <div class="home-banner-description">
    <p>Buy without limits. Sell without limits.</p>
  </div>
</div>

<div class="home-main">
  <div class="home-main-new-release">
    <p>Hot New Release</p>
  </div>
  <ul class="home-main-products-list">
    <% @products_new.each do |product| %>
      <% if product.visibility %>
        <li>
          <div class="product-image-container">
            <%= link_to image_tag(product.photo_url(:homepage)), product_path(product) %>
          </div>
          <div class="product-info-container">
            <p>by <%= link_to product.user.username, user_path(product.user) %></p>
            <p>$<%= sprintf('%.2f', product.unitprice) %></p>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
