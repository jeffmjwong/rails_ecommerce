<% if @user == current_user %>
  <div>
    <h2>Welcome home, <%= @user.username %>!</h2>
    <p>Your account details</p>
  </div>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

<% end %>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<% if @user != current_user %>
  <div>
    <p>Items sold by this user:</p>
    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
      <tr>
        <% @user.products.each do |product| %>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.quantity %></td>
          <td><%= product.unitprice %></td>
        <% end %>
      </tr>
    </table>
  </div>
<% end %>

<% if @user == current_user %>
  <%= link_to 'Go To My Shop', products_path %> |
  <%= link_to 'Go To My Cart' %> |
<% end %>
<%= link_to 'Go To Market Place Home Page', root_path %>
